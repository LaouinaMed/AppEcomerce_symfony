{% extends 'base.html.twig' %}

{% block title %} Products List {{category.name}} {% endblock %}


{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Products List {{category.name}}</h1>
            </div>

            {% for product in category.products %}
                <div class="col-3 mb-3">
                    <article class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">{{ product.name }}</h2>
                        <p class="card-text">{{ product.description }}</p>
                        <a href="#" class="btn btn-prymary">See the details</a>
                    </div>
                    </article>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}